<?xml version="1.0" encoding="utf-8"?>
<!-- http://www.dibbus.com/2011/02/gradient-buttons-for-android/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <item>
                <shape android:shape="oval">
                    <padding
                        android:bottom="3dp"
                        android:left="0dp"/>
                    <solid
                        android:color="#55000000"/>
                    <corners
                        android:radius="10dp" />
                    <size
                        android:height="50dp"
                        android:width="50dp"/>

                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <solid
                        android:color="#E91E63"/>
                    <corners
                        android:radius="10dp" />
                    <size
                        android:height="50dp"
                        android:width="50dp"/>

                </shape>

            </item>


        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>

            <item>
                <shape android:shape="oval">
                    <padding
                        android:bottom="3dp"
                        android:left="0dp"/>
                    <solid
                        android:color="#55000000"/>
                    <corners
                        android:radius="10dp" />
                    <size
                        android:height="50dp"
                        android:width="50dp"/>

                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <solid
                        android:color="#E91E63"/>
                    <corners
                        android:radius="10dp" />
                    <size
                        android:height="50dp"
                        android:width="50dp"/>

                </shape>

            </item>


        </layer-list>
    </item>

</selector>
